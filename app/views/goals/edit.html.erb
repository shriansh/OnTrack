<!-- Validation failure messages -->

<% if @goal.errors.any? %>
  <% @goal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Goal #<%= @goal.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_goal/<%= @goal.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for recurringday -->
          <div class="form-group">
            <label for="recurringday" class="col-sm-2 control-label">
              Recurringday
            </label>
            <div class="col-sm-10">
              <input type="text" id="recurringday" name="recurringday" placeholder="Recurringday" class="form-control" value="<%= @goal.recurringday %>">
            </div>
          </div>

          <!-- Label and input for recurring -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="recurring">
                  <input type="checkbox" id="recurring" name="recurring" value="1" <%= "checked" if @goal.recurring %>>
                  Recurring
                </label>
              </div>
            </div>
          </div>

          <!-- Label and input for stretch -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="stretch">
                  <input type="checkbox" id="stretch" name="stretch" value="1" <%= "checked" if @goal.stretch %>>
                  Stretch
                </label>
              </div>
            </div>
          </div>

          <!-- Label and input for goaloneliner -->
          <div class="form-group">
            <label for="goaloneliner" class="col-sm-2 control-label">
              Goaloneliner
            </label>
            <div class="col-sm-10">
              <input type="text" id="goaloneliner" name="goaloneliner" placeholder="Goaloneliner" class="form-control" value="<%= @goal.goaloneliner %>">
            </div>
          </div>

          <!-- Label and input for complete -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="complete">
                  <input type="checkbox" id="complete" name="complete" value="1" <%= "checked" if @goal.complete %>>
                  Complete
                </label>
              </div>
            </div>
          </div>

          <!-- Label and input for duedate -->
          <div class="form-group">
            <label for="duedate" class="col-sm-2 control-label">
              Duedate
            </label>
            <div class="col-sm-10">
              <input type="text" id="duedate" name="duedate" placeholder="Duedate" class="form-control" value="<%= @goal.duedate %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Goal
              </button>
              or
              <a href="/goals/<%= @goal.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
