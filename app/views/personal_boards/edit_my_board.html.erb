

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Personal Board #<%= @personal_board.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_personal_board/<%= @personal_board.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

           <!-- Label and input for boardmember5 -->
          <div class="form-group">
            <label for="boardmember5_id" class="col-sm-2 control-label">
              Boardmember
            </label>

            <div class="col-sm-10">
              <%= select_tag(:boardmember5_id, options_from_collection_for_select(User.all, :id, :username, @personal_board.boardmember5_id), :class => "form-control") %>
            </div>


          </div>

          <!-- Label and input for boardmember4 -->
          <div class="form-group">
            <label for="boardmember4_id" class="col-sm-2 control-label">
              Boardmember
            </label>
