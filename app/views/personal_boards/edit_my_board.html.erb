              <%= select_tag(:boardmember4_id, options_from_collection_for_select(User.all, :id, :username, @personal_board.boardmember4_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for boardmember3 -->
          <div class="form-group">
            <label for="boardmember3_id" class="col-sm-2 control-label">
              Boardmember
            </label>
