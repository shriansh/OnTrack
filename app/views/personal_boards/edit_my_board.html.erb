              <%= select_tag(:boardmember1_id, options_from_collection_for_select(User.all, :id, :username, @personal_board.boardmember1_id), :class => "form-control") %>
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Personal Board
              </button>
              or
              <a href="/personal_boards/<%= @personal_board.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


