              <%= select_tag(:boardmember3_id, options_from_collection_for_select(User.all, :id, :username, @personal_board.boardmember3_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for boardmember2 -->
          <div class="form-group">
